- form_for(@page) do |f|
  %p
    %span= f.label('name')
    %span= f.text_field('name')
  %p
    %span= f.label('title')
    %span= f.text_field('title')
  %p#edit-box
    = f.text_area('content')
  %p.button= f.submit "Save"

.buttons
  %p.button
    %span= link_to 'Cancel', @page, :method => :get
  %p.button
    %span= link_to 'Delete', @page, :method => :delete
