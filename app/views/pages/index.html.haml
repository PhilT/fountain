%ul#sort
  %li sort by:
  %li= link_to 'name', pages_path(:order => 'name')
  %li= link_to 'last updated', pages_path(:order => 'updated_at')

%ul#index
  - for page in @pages
    %li
      = link_to page.title, page_path(page)
      %span= '(' + time_ago_in_words(page.updated_at) + ')' if params[:order] == 'updated_at'

